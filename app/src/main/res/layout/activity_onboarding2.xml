<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_onboarding2"
    tools:context=".ui.onboarding.Onboarding2Fragment">

    <ImageView
        android:id="@+id/iv_onboard2_icon"
        android:layout_width="244dp"
        android:layout_height="219dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/ic_onboading2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/iv_onboard2_text"
        android:layout_width="332dp"
        android:layout_height="99dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/sofia_pro_medium"
        android:text="Tự tay vẽ tay lên những thiết kế và truyền dữ liệu trực tiếp xuống board mạch."
        android:textAlignment="center"
        android:textColor="#4C5A52"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_onboard2_icon" />

    <Button
        android:id="@+id/btn_onboarding2_next"
        android:layout_width="105dp"
        android:layout_height="44dp"
        android:background="@drawable/button_bg"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_onboard2_text" />

</androidx.constraintlayout.widget.ConstraintLayout>